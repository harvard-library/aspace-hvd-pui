<div class="row">
  <div class="col-sm-12">
    <div><%= t('brand.welcome_notification').html_safe %></div>
    <h1><%= t('brand.welcome_head').html_safe %></h1>
  </div>
</div>
<div class="row" id="welcome_text">
  <div class="col-sm-12">
      <div> <%= t('brand.welcome_message').html_safe %> </div>
  </div>
</div>
  <%= render partial: 'shared/search', locals: {:search_url => "/search",
    :title => t('archive._plural'), :show_header => false,
    :limit_options => [["#{t('search-limits.all').humanize}",''],
          ["#{t('search-limit')} #{t('search-limits.resources')}",'resource'],
          ["#{t('search-limit')} #{t('search-limits.digital')}",'digital_object']],
    :field_options => [["#{t('search_results.filter.fullrecord')}",''],
          ["#{t('search_results.filter.title')}",'title'],
          ["#{t('search_results.filter.creators')}",'creators_text'],
          ["#{t('search_results.filter.notes')}", 'notes'],
          ["#{t('search_results.filter.identifier')}", 'four_part_id']] } %>
<div class="row" id="welcome_links">
  <div class="col-sm-4" id="repos">
    <div class="welcome_links">
      <%= t('brand.welcome_repo').html_safe %>
    </div>
  </div>
  <div class="col-sm-4" id="hollis">
    <div class="welcome_links">
      <%=t('brand.welcome_hollis').html_safe %>
    </div>
  </div>
  <div class="col-sm-4" id="ask">
    <div class="welcome_links">
      <%=t('brand.welcome_ask').html_safe %>
    </div>
  </div>
</div>
